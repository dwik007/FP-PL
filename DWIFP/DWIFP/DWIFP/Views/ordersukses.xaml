<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="DWI.Views.ordersukses">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="centang.png" HorizontalOptions="Center" Margin="30,20,30,20"/>
            <Label Text="Your Order has been accepted" FontSize="Large" HorizontalOptions="Center"/>
            <Label Text="Your items has been placed and is on it's way to being processed" FontSize="Micro" HorizontalOptions="Center"/>
            <Button Text="Track Order" BackgroundColor="Green" Margin="30,170,30,0" CornerRadius="20"/>
            <Button Text="Back to Home" BackgroundColor="Transparent" Margin="30,5,30,20" Clicked="gotoshop"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>